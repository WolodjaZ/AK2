.data
SYSREAD = 0
SYSWRITE = 1
SYSOPEN = 2
SYSCLOSE = 3
FREAD = 0
FWRITE = 1
file_in: .ascii "in.txt\0"
file_out: .asciz "out.txt\0" 
 


.bss
.comm out_buffer, 1024
.comm in_buffer, 1024

.text
.global _start
_start:

# Otwarcie pliku $file_in do wczytania
mov $SYSOPEN, %rax  
mov $file_in, %rdi 
mov $FREAD, %rsi   
mov $0h777, %rdx     
syscall      
push %rax       
mov %rax, %r8 

mov $SYSREAD, %rax
mov %r8, %rdi       # Zamiast STDOUT, podajemy id otwartego pliku
mov $out_buffer, %rsi
mov $1024, %rdx
syscall

dec %rax
movq %rax, %rsp
movq $0, %rcx
movq $0, %r10
movq $0, %r8

po_dwie_liczby:
	movq $0, %rax
	jmp dekodowanie_do_liczby
pierwsz:
	cmp %rcx, $1
	je drugi	
	push %bl
	inc %rcx
	cmp %rcx, %rsp
	jl zapis_1
	jmp dekodowanie_do_liczby
drugi:
	movb %bl, %al
	movq $0, %rdi
	mul $16
zapis_1
	pop %bl
	add %al, %bl
	movq $0, %rcx
	movb %bl in_buffer(, %r8, 1)
	inc %r8
	cmp %rcx, %rsp
	jl po_dwie_liczby
	jmp zapis
	
dekodowanie_do_liczby:
	movb out_buffer(, %rcx, 1), %bl
	cmp $'A', %bl
	jge liter
	cmp $'0', %bl
	jge liczba
	
liter:	
	sub $'A', %bl
	jmp pierwsz
liczba:	
	sub $'0', %bl
	jmp pierwsz

zapis:
	# ZamkniÄ™cie pliku
	push %r8
	mov $SYSCLOSE, %rax 
	mov %r8, %rdi       
	syscal

	# Otwarcie pliku $file_out do wczytania
	mov $SYSOPEN, %rax  
	mov $file_out, %rdi 
	mov $FWRITE, %rsi   
	mov $0, %rdx     
	syscall         
	mov %rax, %r8

	mov $SYSWRITE, %rax
	mov %r8, %rdi       # Zamiast STDOUT, podajemy id otwartego pliku
	mov $in_buffer, %rsi
	mov $1024, %rdx
	syscall
	
	mov $SYSCLOSE, %rax 
	mov %r8, %rdi       
	syscal

	movq $SYSEXIT, %rax
	movq $EXIT_SUCCESS, %rdi
	syscall
	
	 

	
